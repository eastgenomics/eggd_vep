{
  "name": "eggd_vep",
  "title": "eggd_vep",
  "summary": "Annotates and filters VCF files",
  "properties": {
    "githubRelease": "1.0.0"
  },
  "dxapi": "1.0.0",
  "openSource": true,
  "version": "1.0.0",
  "inputSpec": [
    {
      "name": "vcf",
      "label": "vcf file",
      "help": "vcf",
      "class": "file",
      "patterns": ["*.vcf", "*.vcf.gz"],
      "optional": false
    },
    {
      "name": "buffer_size",
      "label": "Number of variants to annotate",
      "help": "To make annotating more efficient, the number of variants to annotate can chosen. Default is 500 but can be tweaked for bigger files.",
      "class": "int",
      "optional": true,
      "default": 500
    },
    {
      "name": "config_file",
      "label": "Configuration file stating the annotation sources to be used",
      "help": "File describing annotation files to be used",
      "class": "file",
      "optional": false
    },
    {
      "name": "panel_bed",
      "label": "bedfile of requested panel",
      "help": "Bedfile to filter vcf before annotating.",
      "class": "file",
      "optional": true
    },
    {
      "name": "transcript_list",
      "label": "List of transcripts to output after annotation.",
      "help": "List of transcripts to output. One transcript per row.",
      "class": "file",
      "optional": true
    }
  ],
  "outputSpec": [
    {
      "name": "annotated_vcf",
      "label": "Filtered and annotated VCF",
      "help": "VCF that has been filtered and annotated using bcftools and VEP",
      "class": "file",
      "patterns": ["*annotated.vcf"]
    }
  ],
  "runSpec": {
    "interpreter": "bash",
    "timeoutPolicy": {
      "*": {
        "hours": 6
      }
    },
    "distribution": "Ubuntu",
    "release": "20.04",
    "version": "0",
    "file": "src/code.sh",
    "assetDepends": [
      {
        "name": "bedtools",
        "project": "project-Fkb6Gkj433GVVvj73J7x8KbV",
        "folder": "/app_assets/bedtools/bedtools_v2.30.0",
        "version": "2.30.0"
      },
      {
        "name": "htslib",
        "project": "project-Fkb6Gkj433GVVvj73J7x8KbV",
        "folder": "/app_assets/htslib/htslib_v1.15.0",
        "version": "1.15.0"
      }
    ]
  },
  "developers":[
    "user-toutoua",
    "org-emee_1"
  ],
  "authorizedUsers": [
    "org-emee_1"
  ],
  "regionalOptions": {
    "aws:eu-central-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd2_v2_x4"
        }
      }
    }
  },
  "details": {
    "citations": [
      "doi:10.1186/s13059-016-0974-4",
      "doi:10.1186/s13073-021-00835-9"
    ],
    "upstreamProjects": [
      {
        "name": "VEP",
        "repoUrl": "https://github.com/Ensembl/ensembl-vep",
        "version": "130.1",
        "license": "Apache License 2.0",
        "licenseUrl": "https://github.com/Ensembl/ensembl-vep/blob/release/103/LICENSE",
        "author": "EMBL-EBI"
      }
    ],
    "contactEmail": "East GLH Bioinformatics",
    "whatsNew": "* 1.0.0 First release of VEP app (forked from vcf handler for Uranus and then stripped down)\n"
  },
  "categories": [],
  "access": {
    "network": [
      "*"
    ],
    "project": "CONTRIBUTE",
    "allProjects": "VIEW"
  },
  "ignoreReuse": true
}
